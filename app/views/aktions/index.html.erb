<p id="notice"><%= notice %></p>

<h1>Listing Aktions</h1>

<table>
  <thead>
    <tr>
      <th>Monat</th>
      <th>Name</th>
      <th>Rabatt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @aktions.each do |aktion| %>
      <tr>
        <td><%= aktion.Monat %></td>
        <td><%= aktion.Name %></td>
        <td><%= aktion.Rabatt %></td>
        <td><%= link_to 'Show', aktion %></td>
        <td><%= link_to 'Edit', edit_aktion_path(aktion) %></td>
        <td><%= link_to 'Destroy', aktion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

